<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".ClubActivity1">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFF">
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团简介"
            android:textColor="#000"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/club_detail"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/background"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/club_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/club_member"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="   成员数："
                android:textColor="#A40C0707"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/member"/>
            <TextView
                android:id="@+id/member_count"
                android:layout_width="wrap_content"
                android:layout_height="26dp" />

        </LinearLayout>

    </LinearLayout>
    社团简介：
    <TextView
        android:id="@+id/words"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/club_detail"
        android:background="#FFF"
        android:text="基本资料"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="#E10C0707"
        android:drawableLeft="@drawable/line"
        />
    <TextView
        android:id="@+id/club_describtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@+id/words"
        android:textColor="#A40C0707"
        android:textSize="15dp"
        android:paddingBottom="10dp"/>

    社团事迹：
    <TextView
        android:id="@+id/words2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/club_describtion"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:text="社团大事记"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="#E10C0707"
        android:drawableLeft="@drawable/line"
        />
    <TextView
        android:id="@+id/club_things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@+id/words2"
        android:textColor="#A40C0707"
        android:textSize="15dp"
        android:paddingBottom="10dp"/>

    <!--底部保存控件-->

    <Button
        android:id="@+id/cancel_save"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/shape"
        android:text="取消关注"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="60dp"
        />
</RelativeLayout>