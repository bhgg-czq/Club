<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="社长"
        android:visibility="gone"
        android:padding="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:layout_marginLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"


        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_head_allogin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

        <TextView
            android:id="@+id/stuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/img_header"
            android:text="陈章琦"
            android:textSize="15sp"
            android:textColor="#000"

            />
    <TextView
        android:id="@+id/stunumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_header"
        android:layout_below="@+id/stuname"
        android:text="31701001"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_below="@id/stunumber"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/line"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="20dp"
         android:text="分院："
         android:textSize="15sp"
         android:textColor="#000"
         />
    <TextView
        android:id="@+id/member_fenyuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算机与计算科学学院"
        android:layout_below="@+id/line"
        android:layout_toRightOf="@id/img_header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:layout_below="@+id/member_fenyuan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#000"
            />
    <TextView
        android:id="@+id/member_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13588225656"

        android:layout_toRightOf="@id/img_header"
        android:layout_below="@+id/member_fenyuan"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#000"

        />

    </RelativeLayout>

</RelativeLayout>